<h1>Experiencias</h1>

<%= link_to 'Crear experiencia', new_experience_path, :class => "btn btn-lg " %>

<div class="buscador">
	<%= form_tag(experiences_searchExperience_path, :method => "post",:class=>"form-inline") do %>
	<div class="input-group">
		<%= text_field_tag :search, params[:search], placeholder: "Buscar experiencias",:class => 'form-control',:required=>true %>
		<span class="input-group-btn">
			<%= submit_tag "Ir", :class => 'btn btn-default' %>
		</span>
	</div>
	<%end%>
</div>
<ul class="nav nav-tabs tabRease nav-justified">
<li id="exp1" onclick="exp1()"><a>Servicios Activos</a></li>
<li id="exp2" onclick="exp2()"><a>Experienciass</a></li>
</ul>
<div id="FServicios">
	<%if @services.present?%>
		<% @services.order('created_at DESC').each do |service| %>
			<div class="panel panel-default panelRease">
				<div class="panel-heading">
					SERVICIO
				</div>
				<div class="panel-body">
					DESCRIPCION
				</div>
			</div>
		<%end%>
	<%else%>
			<div class="panel panel-default panelRease">
				<div class="panel-heading">
					Servicios Activos
				</div>
				<div class="panel-body">
					<p>No hay servicios activo disponibles</p>
				</div>
			</div>
	<%end%>      
</div>

<div id="FExperiences">
	<%if @experiences.present?%>
		<% @experiences.order('created_at DESC').each do |experience| %>
			<div class="panel panel-default panelRease">
				<div class="panel-heading">
					Folio N° <%= experience.folio %>
				</div>
				<div class="panel-body">
					<h2>Descripción:</h2>
					<p><%=experience.description%></p>
					<%= link_to "Ver experiencia", experience%>
					<%if experience.request_id.present?%>
						- <%= link_to "Ver solicitud asociada", experience.request%>
					<%else%>
						- <%= link_to "Ver oferta asociada", experience.offering%>
					<%end%>
				</div>
			</div>
		<%end%>
	<%else%>
			<div class="panel panel-default panelRease">
				<div class="panel-heading">
					Experiencias
				</div>
				<div class="panel-body">
					<p>No hay experiencias disponibles</p>
				</div>
			</div>
	<%end%>      
</div>

<script type="text/javascript">
	document.getElementById('FServicios').style.display='block';	
	document.getElementById('FExperiences').style.display='none';	
	document.getElementById("exp1").className = "active";	

	function exp1(){
		document.getElementById('FServicios').style.display='block';	
		document.getElementById('FExperiences').style.display='none';	
		document.getElementById("exp1").className = "active";	
		document.getElementById("exp2").className = "";
	}
	function exp2(){
		document.getElementById('FServicios').style.display='none';	
		document.getElementById('FExperiences').style.display='block';		
		document.getElementById("exp1").className = "";
		document.getElementById("exp2").className = "active";
	}

</script>