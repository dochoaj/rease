<h1>Experiencias <button type="button" class="btn btn-default btnWhite" id:"btnExperiencia" data-trigger="focus" data-container="body" data-toggle="btnExperiencia"> ? </button></h1>

<div class="buscador">
	<%= form_tag(experiences_searchExperience_path, :method => "post",:class=>"form-inline") do %>
	<div class="input-group">
		<%= text_field_tag :search, params[:search], placeholder: "Buscar experiencias",:class => 'form-control',:required=>true %>
		<span class="input-group-btn">
			<%= button_tag(type: "submit", class: "btn btn-default ") do %>
				<i class="glyphicon glyphicon-search"></i>
			<% end %>
		</span>
	</div>
	<%end%>
</div>
	
<%if @experiences.present?%>
	<% @experiences.order('created_at DESC').each do |experience| %>
		<div class="panel panel-default panelRease">
			<div class="panel-heading">
				Folio NÂ° <%= experience.id %>
			</div>
			<div class="panel-body">
				<h2>Objetivos de servicio:</h2>
				<p><%=experience.service_objectives%></p>
				<%= link_to "Ver experiencia", experience, :class =>'btn btnCRUD'%>
				<%= link_to "Ver servicio relacionado", experience.service, :class => 'btn btnCRUD'%>
			</div>
		</div>
	<%end%>
<%else%>
	<div class="panel panel-default panelRease">
		<div class="panel-heading">
			Experiencias
		</div>
		<div class="panel-body">
			<p>No hay experiencias disponibles</p>
		</div>
	</div>
<%end%>      

<%= will_paginate @experiences%>

<script type="text/javascript">
	$(function () {
		$('[data-toggle="btnExperiencia"]').popover(
			{
				title: 'Experiencias',
				html: 'true', 
				content: '<p>Las <strong>Experiencias:</strong> Son servicios activos finalizados correctamente. La cual el profesor responsable ha documentado.</p>'
			}
		)
	})
</script>