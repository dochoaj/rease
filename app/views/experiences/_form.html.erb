<%accion ||= "Crear"%>
<%= form_for(@experience) do |f| %>
  <% if @experience.errors.any? %>
      <% @experience.errors.full_messages.each do |message| %>
        <%flash[:alert] = message %>
      <% end %>
  <% end %>
<div class="panel panel-default panelRease" >
    <div class="panel-heading">Experiencia</div>
    <div class="panel-body">
		<%if @offering.present?%>
			<%= f.select :offering_id, @offering.collect {|off| [off.title, off.id]},{:include_blank => "Oferta de servicio relacionada"},{ :class => 'form-control'} %>
		<%else%>
			<p>No hay ofertas de servicio realizadas</p>
		<%end%>
	</div>
</div>

<div class="panel panel-default panelRease" >
    <div class="panel-heading">I. Antecedentes generales</div>
    <div class="panel-body">
     	<%= f.select :area_id, @areas.collect {|area| [area.name, area.id]},{:include_blank => "Area de Trabajo", required: true},{ :class => 'form-control'} %>

     	<%= f.select :institution_id, @institutions.collect {|ins| [ins.name, ins.id]},{:include_blank => "Universidad", required: true},{ :class => 'form-control'} %>

    	<%= f.text_field :faculty, :class => 'form-control', :placeholder => 'Facultad ', required: true%>	
    	
    	<%= f.text_field :department, :class => 'form-control', :placeholder => 'Departamento/Carrera', required: true%>	

    	<%= f.text_field :course_name, :class => 'form-control', :placeholder => 'Nombre asignatura/curso', required: true%>

		<%= f.select(:course_type, [['Obligatorio', 'Obligatorio'],['Optativo', 'Optativo'],['Electivo','Electivo'], ['Otro','Otro']], {:include_blank => '-- Seleccione tipo de curso --' }, { :class => 'form-control', :required => true, :id => "tipoCurso" }) %>
		<p class="note">Especifique en caso de haber seleccionado Otro</p>
		<%= f.text_field :course_type_other ,:class => 'form-control', :placeholder => "Especificacion" %>


		<%= f.select(:period, [['I semestre', 'I semestre'],['II semestre', 'II semestre'],['Anual','Anual']], {:include_blank => '-- Periodo del curso --' }, { :class => 'form-control', :required => true }) %>

		<%= f.text_field :professor_phone, :class => 'form-control', :placeholder => 'Telefono profesor responsable ', :required => true%>	

		<%= f.select(:professor_degree, [['Licenciado', 1],['Magister', 2],['Doctorado',3]], {:include_blank => '-- Grado académico del profesor responsable --' }, { :class => 'form-control', :required => true }) %>

	</div>
</div>
<div class="panel panel-default panelRease" >
	<div class="panel-heading">II. Antecedentes de la actividad de Aprendizaje Servicio </div>
	<div class="panel-body">
		<%= f.text_area :learning_objectives, :class => 'form-control', :placeholder => 'Objetivos de aprendizaje y/o Competencias asociadas', :required => true%>
		<%= f.text_area :service_objectives, :class => 'form-control', :placeholder => 'Objetivos de servicio', :required => true%>
		<%= f.text_area :description, :class => 'form-control', :placeholder => 'Descripción del Proyecto de A+S (máximo 100 palabras dando énfasis a actividades desarrolladas) ', :required => true%>
		<%= f.select(:institutional_support, [['Cuenta con respaldo institucional', 1],['Corresponde a una iniciativa individual del profesor', 2]],{:include_blank => '-- Respaldo institucional (Seleccione una opción) --' } ,{ :class => 'form-control', :required => true }) %>
		<%= f.number_field :frequency, :class => 'form-control', :placeholder => '¿Con que frecuencia se realiza?', :required => true%>
		<%= f.number_field :weekly_hours, :class => 'form-control', :placeholder => 'Horas cronológicas semanales',:required => true%>
		<%= f.number_field :participants, :class => 'form-control', :placeholder => 'Número estudiantes participantes', :required => true%>
		<%= f.text_field :students_level, :class => 'form-control', :placeholder => 'Nivel de la carrera de los Estudiantes',:required => true%>
		<%= f.text_field :community_partner, :class => 'form-control', :placeholder => 'Nombre del socio comunitario', :required => true%>
		<%= f.text_field :organization_type, :class => 'form-control', :placeholder => 'Tipo de organización comunitaria',:required => true%>		
		<%= f.number_field :benefit, :class => 'form-control', :placeholder => 'Número de beneficiados directos con toda la actividad o proyecto'%>
		<%= f.text_area :results, :class => 'form-control', :placeholder => 'Resultados de aprendizaje',:required => true%>
		<%= f.text_area :tools, :class => 'form-control', :placeholder => 'Nombre herramientas de medición (cuali y/o cuantitativas) utilizadas y documentos que respalden el proyecto ', :required => true%>
		<%= f.text_area :reflection_moments, :class => 'form-control', :placeholder => 'Mencione las instancias de reflexión',:required => true%>

	</div>
</div>


    <%= f.submit "Guardar Experiencia", :class => 'btn btn-lg btnCRUD' %>
    <%= link_to 'Volver', experiences_path, :class => "btn btn-lg btnCRUD"%>

<% end %>


