<%accion ||= "Crear"%>
<%= form_for(@offering) do |f| %>
  <% if @offering.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@offering.errors.count, "error") %> prohibited this offering from being saved:</h2>

      <ul>
      <% @offering.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="panel panel-default panelRease" >
    <div class="panel-heading">Datos de la oferta</div>
    <div class="panel-body">
	<p class="note">*Todos los campos son obligatorios.</p>
		<div class="field">
			<%= f.text_field :title, :class => 'form-control', :placeholder => 'Titulo'%>
		</div>
		
		<div class="field">
			<% if accion == "Actualizar" %>
				<%= f.select(:status, [['Disponible', 'Disponible'],['En proceso', 'En proceso'],['Realizado','Realizado'], ['Cancelado','Cancelado'], ['Caducado', 'Caducado']], {:include_blank => '-- Seleccione un estado --' }, { :class => 'form-control', :required => true }) %>
			<% else %>
				<p><b>Estado: </b> Disponible </p>
			<% end %>
		</div>

		<div class="field">
			<%= f.text_area :description, :placeholder=> "Escribir aquí.", :id=>"eg-basic" %>
		</div>
		
		<div class="field">
			<p><%= f.label :start_time, "Fecha de inicio" %>
			<%= f.datetime_select :start_time %></p>
		</div>
		<div class="field">
			<p><%= f.label :end_time, "Fecha de término" %>
			<%= f.datetime_select :end_time %></p>
		</div>
		
	</div>
</div>
    <%= f.submit accion, :class => 'btn btn-lg btnCRUD' %>
    <%= link_to 'Volver', offerings_path, :class => "btn btn-lg btnCRUD"%>

<% end %>

<script>
   $(function() {$('textarea#eg-basic').editable({
      inlineMode: false,
    })
  });
</script>
