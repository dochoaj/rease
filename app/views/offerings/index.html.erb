<h1>Ofertas de servicio</h1>

<% if current_user.category != 4 %>
  <%= link_to "Nueva oferta de servicio", new_offering_path, :class => 'btn btn-lg' %>
<%end%>

<% @offerings.each do |offering| %>
  <div class="panel panel-default panelRease">
    <div class="panel-heading">
      <%= offering.title %>
    </div>
    <div class="panel-body">
      <%=raw offering.description %>
      <p><b>Estado: </b><%=offering.status %></p>
    </div>

    <div class="panel-footer">
      <p><b>Creador:</b> <%= offering.user.name %> <%= offering.user.last_name %><p>
      <p><b>Fecha y hora de inicio: </b><%=l offering.start_time %></p>
      <p><b>Fecha y hora de t√©rmino: </b><%=l offering.end_time %></p>
      <%= link_to "Ver oferta", offering %>
    </div>
  </div>
<%end%>
