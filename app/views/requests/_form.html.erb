<%= form_for @request, :html => { :class => "form-horizontal request" } do |f| %>

	<% if @request.errors.any? %>
	<div id="error_expl" class="panel panel-danger">
		<div class="panel-heading">
			<h3 class="panel-title"><%= pluralize(@request.errors.count, "error") %> prohibited this request from being saved:</h3>
		</div>
		<div class="panel-body">
			<ul>
				<% @request.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	</div>
	<% end %>

	<div class="control-group">
		<div class="field">
			<%= f.text_field :title, :class => 'form-control', :placeholder => 'Titulo' %>
		</div>
		<%= error_span(@request[:title]) %>
	</div>

	<div class="control-group">
		<div class="field">
			<%= f.text_area :description, :class => 'form-control', :placeholder => 'DescripciÃ³n' %>
		</div>
		<%= error_span(@request[:description]) %>
	</div>

	<div class="control-group">
		<div class="field">
			<%= f.text_field :user_id, :class => 'form-control', :placeholder => 'ID usuario' %>
		</div>
		<%= error_span(@request[:user_id]) %>
	</div>


	<%= f.submit "Crear", :id => 'boton', :class => 'btn btn-lg btn-block' %>
	<%= link_to t('.cancel', :default => t("helpers.links.cancel")), requests_path, :class => 'btn btn-lg btn-block', :id => 'boton' %>

<% end %>
