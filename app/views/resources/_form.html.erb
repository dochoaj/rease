<%orden ||= "Crear"%>
<%= form_for(@resource) do |f| %>
	<% if @resource.errors.any? %>
			<% @resource.errors.full_messages.each do |message| %>
				<%flash[:alert] = message %>
			<% end %>
	<% end %>

<div class="panel panel-default panelRease" >
	<div class="panel-heading">
		Datos del recurso
	</div>
	<div class="panel-body">
		<p class="note">*Todos los campos obligatorios</p>
		<div class="field">
			<%= f.text_field :name, :class => 'form-control', :placeholder => 'Nombre recurso',:required=>true %>
		</div>
		<div class="field">
			<%= f.text_area :description, :class => 'form-control', :placeholder => 'Breve descripciÃ³n',:required=>true %>
		</div>
		<%= f.select(:category, [['Acta', 1],['Contrato', 2],['Formulario',3], ['Otro',4]], {:include_blank => '-- Seleccione el tipo de recurso --' }, { :class => 'form-control', :required => true }) %>

		<div class="field">
			<p><%= f.label :date, "Fecha: " %>
			<%= f.date_select :date %></p>
		</div>
		<p class="note">Extensiones permitidas: .jpg .gif .png .pdf .doc .xls .ppt .txt </p>
		<div class="field">
			<%= f.file_field :archive %>
		</div>
	</div>	
</div>
	<%= f.submit "Subir archivo", :class=>"btn btn-lg btnCRUD" %>
	<%= link_to 'Volver', resources_path, :class =>"btn btn-lg btnCRUD" %>
<% end %>
