<h1>Eventos </h1>
<% if user_signed_in? && current_user.category == 1  %>
	<%= link_to 'Nuevo evento', new_event_path, :class => "btn btn-lg " %>
<% end %>
	<%= link_to 'Mostrar eventos', events_listado_path ,:class => "btn btn-lg " %>

<div class="buscador">
	<%= form_tag(events_searchEvent_path, :method => "post",:class=>"form-inline") do %>
	<div class="input-group">
		<%= text_field_tag :search, params[:search], placeholder: "Buscar eventos",:class => 'form-control',:required=>true %>
		<span class="input-group-btn">
			<%= button_tag(type: "submit", class: "btn btn-default ") do %>
				<i class="glyphicon glyphicon-search"></i>
			<% end %>
		</span>
	</div>
	<%end%>
</div>

<div  class="panel panel-default panelRease">
	<div class="panel-heading">
		Calendario de eventos

	</div>
	<div class="panel-body" id = "calendar">
	</div>
</div>

<script type="text/javascript">
	$(document).ready(function() {
		$('#calendar').fullCalendar({
			buttonText: {
				today: 'Fecha actual',
				day: 'Día',
				week:'Semana',
				month:'Mes'
			},
			eventSources:[{
				url: '/events.json',
				color: '#30bbbb',
			}],
			timeFormat: 'H(:mm)',			
			monthNames: ['Enero', 'Febrero', 'Marzo', 'Abril', 'Mayo', 'Junio', 'Julio', 'Agosto', 'Septiembre', 'Octubre', 'Noviembre', 'Diciembre'],
			dayNamesShort: ['Domingo','Lunes','Martes', 'Miércoles', 'Jueves', 'Viernes', 'Sábado']

		})
	});
</script>


