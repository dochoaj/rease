<h1> Todos los eventos </h1>

<%= link_to "Volver al calendario", events_path , :class => "btn btn-lg btnCRUD" %>


<% @events.each do |event| %>
  <div class="panel panel-default panelRease">
    <div class="panel-heading">
      <%= event.title %>
    </div>
    <div class="panel-body">
      <%=raw event.description %>
    </div>

    <div class="panel-footer">
      <p><b>Creador:</b> <%= event.user.name %> <%= event.user.last_name %><p>
      <p><b>Fecha y hora de inicio: </b><%=l event.start_time %></p>
      <p><b>Fecha y hora de t√©rmino: </b><%=l event.end_time %></p>
      <%= link_to "Ver evento", event %>
    </div>
  </div>
<%end%>
