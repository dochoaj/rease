<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-6 col-md-offset-3">
      <!--h1 class="text-center login-title">Ingrese sus datos para conectarse a REASE</h1-->
      <h1> Ingrese sus datos para registrarse a REASE </h1>
      <div class="account-wall">

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name),  html: {class: 'form-signin'}) do |f| %>
          <%= devise_error_messages! %>

          <div class="field">
            <p><%= f.label :email, "Correo electrónico" %></p>
            <%= f.email_field :email, :class => 'form-control',autofocus: true  %>
          </div>

          <div class="field">
            <p><%= f.label :password, "Crea una contraseña" %>
            <% if @validatable %>
            <em>(<%= @minimum_password_length %> caracteres mínimo)</em>
            <% end %></p>
            <%= f.password_field :password,:class => 'form-control', autocomplete: "off" %>
          </div>

          <div class="field">
            <p><%= f.label :password_confirmation, "Confirma tu contraseña" %></p>
            <%= f.password_field :password_confirmation,:class => 'form-control', autocomplete: "off" %>
          </div>

          <div class="actions">
            <%= f.submit "Enviar Registro",:id => 'boton', :class => 'btn btn-lg btn-block'%>
          </div>


          <br><%= render "devise/shared/links" %>
        <% end %>

       
      </div>
    </div>
  </div>
</div>